{
    "compilerOptions": {
      "target": "es2017",
      "types": ["node", "jest"],
      "allowJs": true,
      "jsx":"react",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "baseUrl": ".",
      "noFallthroughCasesInSwitch": true,
      "outDir": "./dist",
      "sourceMap": true,
    },
    "compileOnSave": true,
    "include": ["."]
  }